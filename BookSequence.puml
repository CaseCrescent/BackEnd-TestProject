@startuml Create Booking (POST)
header Hotel Booking Sequence Diagram
title "Create Booking (POST)"

participant "Client" as client
participant "<<javaScript>>\n:server" as server
participant "<<router>>\n:hotels" as routerHotels
participant "<<router>>\n:bookings" as routerBookings
participant "<<controllers>>\n:bookings" as controllersBookings
participant "<<model>>\n:Hotel" as modelHotel
participant "<<model>>\n:Booking" as modelBooking
database "<<MongoDB>>\n:Database" as Database

client->server ++:req.post('/api/v1/hotels/:hotelId/bookings')
server->routerHotels ++:app.use('/api/v1/hotels', hotels)
routerHotels->routerBookings ++:router.use('/:hotelId/bookings', bookingRouter)
routerBookings -> controllersBookings ++:addBooking()

' Check if Hotel exists
controllersBookings->modelHotel ++:findById(req.params.hotelId)
modelHotel ->Database ++: HotelSchema
Database --> modelHotel --: hotel
modelHotel --> controllersBookings --: hotel

' Create Booking
controllersBookings->modelBooking ++:create(req.body)
modelBooking ->Database ++: BookingSchema
Database --> modelBooking --: booking
controllersBookings <-- modelBooking --:booking

' Send Response
controllersBookings->client --:response

@enduml
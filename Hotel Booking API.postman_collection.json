            {
              "listen": "prerequest",
              "script": {
                "exec": [
                  "// สร้าง Array เก็บ role ที่เป็นไปได้\r",
                  "const roles = ['user', 'admin'];\r",
                  "// สุ่มเลือก 1 ค่า\r",
                  "const randomRole = roles[Math.floor(Math.random() * roles.length)];\r",
                  "// เซ็ตค่าลงในตัวแปร environment ของ Postman\r",
                  "pm.environment.set(\"RANDOM_ROLE\", randomRole);"
                ],
                "type": "text/javascript",
                "packages": {},
                "requests": {}
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"name\": \"Test {{$randomFullName}}\",\n    \"tel\": \"0812345678\",\n    \"email\": \"admin1@gmail.com\",\n    \"password\": \"123456\",\n    \"role\": \"{{RANDOM_ROLE}}\"\n}"
            },
            "url": {
              "raw": "{{URL}}/api/v1/auth/register",
              "host": [

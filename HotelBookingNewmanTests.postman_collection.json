      "name": "1. Authentication",
      "item": [
        {
          "name": "Register Admin",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 200\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "var jsonData = pm.response.json();",
                  "pm.collectionVariables.set(\"ADMIN_TOKEN\", jsonData.token);",
                  "pm.collectionVariables.set(\"ADMIN_EMAIL\", JSON.parse(pm.request.body.raw).email);",
                  "pm.collectionVariables.set(\"ADMIN_PASSWORD\", JSON.parse(pm.request.body.raw).password);"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"name\": \"{{$randomFullName}}\",\n    \"tel\": \"0812345678\",\n    \"email\": \"admin_{{$randomEmail}}\",\n    \"password\": \"123456\",\n    \"role\": \"admin\"\n}"
            },
            "url": {
              "raw": "{{URL}}/api/v1/auth/register",
